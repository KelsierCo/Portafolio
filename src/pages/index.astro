---
import AboutMe from '@/components/AboutMe.astro';
import ExperienceLineIsland from '@/components/ExperienceLineIsland.tsx';
import { EXPERIENCE } from '@assets/const/experience';
import Hero from '@/components/Hero.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import TitleSection from '@/components/TitleSection.astro';
import Layout from '@layouts/Layout.astro';
import Projects from '@/components/Projects.astro';
---


<Layout>
  <main class=" text-white min-h-screen">
	<SectionContainer>
		<Hero>
			</slot>
		</Hero>
	</SectionContainer>
	<div class="space-y-10">
	<SectionContainer>
		<TitleSection>Experiencia</TitleSection>
		<ExperienceLineIsland client:load experience={EXPERIENCE} />
	</SectionContainer>
	<div class="space-y-10">
	<SectionContainer>
		<TitleSection>Proyectos</TitleSection>
		<Projects />
	</SectionContainer>
	<SectionContainer>
		<AboutMe />
	</SectionContainer>
  </main>
</Layout>