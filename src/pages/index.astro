	<SectionContainer>
		<TitleSection>Experiencia</TitleSection>
		<Experience />
	</SectionContainer>
	<div class="space-y-10">
	<SectionContainer>
		<TitleSection>Proyectos</TitleSection>
		<Projects />
	</SectionContainer>
	<SectionContainer>
		<AboutMe />
	</SectionContainer>
  </main>
