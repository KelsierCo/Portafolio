---
import { Image } from 'astro:assets';
import fotoCarlos from '@assets/images/foto_carlos.webp';
import { SOCIAL } from '@/assets/const/social';
---

<div class="flex flex-col justify-center items-center min-h-screen p-4">
		<div class="flex items-center gap-6 mb-6">
			<Image src={fotoCarlos} alt="Imagen Carlos Moreno" class:list="w-72 h-72 rounded-full object-cover border-4 mt-12 border-gray-300 shadow-lg" />
			<div class="ml-8">
				<h1 class="text-5xl font-bold text-primary">Carlos Moreno</h1>
				<p class="text-lg">Desarrollador web con experiencia en proyectos de frontend y backend.</p>
		<div class="flex justify-between items-center mt-8" id="social-links">
			<div class="flex gap-4">
				{
					SOCIAL.map(({name, url, image}) => (
						<a 
							href={url}
							target="_blank"
							rel="noopener noreferrer"
						>
							<image.logo />
						</a>
					))
				}
			</div>
